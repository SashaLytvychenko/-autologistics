<odoo>
    <record id="view_autolog_truck_driver_tree" model="ir.ui.view">
        <field name="name">autolog.truck.driver.tree</field>
        <field name="model">autolog.truck.driver</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="truck_number"/>
            </tree>
        </field>
    </record>

    <record id="view_autolog_truck_driver_form" model="ir.ui.view">
        <field name="name">autolog.truck.driver.form</field>
        <field name="model">autolog.truck.driver</field>
        <field name="arch" type="xml">
            <form string="Truck driver">
                <sheet>
                    <field name='image' widget='image' class='oe_avatar'/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="date_birth"/>
                        </group>
                        <group>
                            <field name="truck_number"/>
                              <field name="driving_experience"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_autolog_truck_driver_kanban" model="ir.ui.view">
        <field name="name">autolog.truck.driver.kanban</field>
        <field name="model">autolog.truck.driver</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by = "truck_number"
                    default_order="driving_experience,name desc" records_draggable="False" quick_create_view = "autolog_mgmt.view_autolog_truck_driver_form">
                <field name="name"/>
                <field name="image"/>
                <field name="id"/>
                <field name="phone"/>
                <field name="date_birth"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-tooltip">
                        <ul class="oe_kanban_tooltip">
                            <li t-if="record.phone.raw_value"><b>Phone number:</b> <t t-esc="record.phone.value"/></li>
                            <li t-if="record.date_birth.raw_value"><b>Date birth:</b> <t t-esc="record.date_birth.value"/></li>
                        </ul>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="img" t-att-src="kanban_image('autolog.truck.driver', 'image', record.id.raw_value)" class="o_image_64_max" height="52"/>
                            </div>
                            <div>
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                            </div>
                            <div>
                                Driving experience -<field name="driving_experience"/>
                            </div>
                        </div>
                    </t>
<!--                       <div class="o_kanban_record_bottom" style="margin-top: 12px;">-->
<!--                                <div class="oe_kanban_bottom_right">-->
<!--                                    <field name="res_partner_id" widget="many2one_avatar_user"/>-->
<!--                                </div>-->
<!--                            </div>-->
                </templates>
            </kanban>
        </field>
    </record>



    <record id="action_autolog_truck_driver" model="ir.actions.act_window">
        <field name="name">Truck driver</field>
        <field name="res_model">autolog.truck.driver</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new truck driver to out team!
            </p>
        </field>
    </record>
</odoo>
