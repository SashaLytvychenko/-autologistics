<odoo>
    <record id="view_autolog_repair_car_service_tree" model="ir.ui.view">
        <field name="name">autolog.repair.car.service.tree</field>
        <field name="model">autolog.repair.car.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget = "handle"/>
                <field name="name"/>
                 <field name='company_currency_id' column_invisible='1'/>
                <field name="monetary_price" optional="show" sum="Total"
                       options="{'currency_field': 'company_currency_id'}"/>
                 <field name="service_description" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="view_autolog_repair_car_service_form" model="ir.ui.view">
        <field name="name">autolog.repair.car.service.form</field>
        <field name="model">autolog.repair.car.service</field>
        <field name="arch" type="xml">
            <form string="Repair car service">
                <header></header>
                <sheet>
                    <group>
                        <group>
                             <field name="name"/>
                        </group>
                        <group>
                            <field name='company_currency_id' invisible='1'/>
                            <field name="monetary_price"
                                   sum="Total"
                                   options="{'currency_field': 'company_currency_id'}"/>
                            <field name="service_description"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>





    <record id="action_autolog_repair_car_service" model="ir.actions.act_window">
        <field name="name">Repair car service</field>
        <field name="res_model">autolog.repair.car.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service!
            </p>
        </field>
    </record>
</odoo>
