<odoo>

    <record id="category_autolog" model="ir.module.category">
        <field name="name">Autologistics</field>
        <field name="description">User access levels for the Autologistics
        </field>
        <field name="sequence">1</field>
    </record>

    <record id="group_autolog_truck_driver" model="res.groups">
        <field name="name">Truck driver</field>
        <field name="category_id" ref="category_autolog"/>
        <field name="comment">Group for truck drivers</field>
    </record>

    <record id="group_autolog_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="category_autolog"/>
        <field name="comment">Group for manager</field>
    </record>

    <record id="group_autolog_administrator" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="category_autolog"/>
         <field name="implied_ids" eval="[(4, ref('group_autolog_manager'))]"/>
        <field name="users" eval="[Command.link(ref('base.user_admin'))]"/>
        <field name="comment">Group for administrator</field>
    </record>
</odoo>
