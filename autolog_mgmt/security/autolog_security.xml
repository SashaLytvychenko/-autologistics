<odoo>
    <record id="rule_autolog_receive_car_for_truck_driver" model="ir.rule">
        <field name="name">Requests for truck driver</field>
        <field name="model_id" ref="autolog_mgmt.model_autolog_receive_car"/>
        <field name="domain_force">[('truck_driver_id.user_id', '=',
            user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('autolog_mgmt.group_autolog_truck_driver'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>



    <record id="rule_autolog_receive_car_for_manager" model="ir.rule">
